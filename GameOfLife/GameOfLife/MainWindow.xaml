<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="Game of life" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid x:Name="GameGrid" Background="Transparent"  VerticalAlignment="Top"/>
        <Button x:Name="StartButton" Content="Start Simulation" Margin="73,0,147,0" VerticalAlignment="Bottom"  Width="110" Panel.ZIndex="100" BorderBrush="#FF5EE600" Background="#FF5EE600"/>
        <Button x:Name="StopButton" Content="Stop Simulation" Margin="183,0,37,0" VerticalAlignment="Bottom" Width="110" Panel.ZIndex="100" BorderBrush="Red" Background="Red"/>
    </Grid>
</Window>
